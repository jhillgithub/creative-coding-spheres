{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@shaders/*": ["src/shaders/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["vite-plugin-glsl/ext"]
  }
}
